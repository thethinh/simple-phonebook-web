doctype html
html
    head
        title My web
        link(rel='stylesheet' type='text/css' href='style.css')
        link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
    body
        #nav
            ul.nav-menu
                li.menu-item.brand My contact
                li.menu-item
                    a(href='/') Home
                li.menu-item
                    a(href='#') Users
                li.menu-item
                    a(href='/create-user') Create User
        #content
            h1(style='text-align: center;') Users List
            form#box-search(action="/search", method="GET")
                p Name
                input(type='text' placeholder='Enter name' name="q")
                button Search
            #list-users
                .row
                    p.name-column(style='font-weight: bold;') Name
                    p.phone-column(style='font-weight: bold;') Phone
                    p.action-column(style='font-weight: bold;') Action  
                each item in users
                    .row             
                        p.name-user= item.name
                        p.phone-user= item.phone
                        a(href="/"+item.id).action-user View
                        a(href="#"+item.id).action-user Edit
                        a(href="#"+item.id).action-user Delete
