extends ../layouts/layout_auth
block content
    .container(style='background-color: rgba(0,43,255,0.1); height: 600px; width: 600px;')
        h1(style='text-align: center; padding-top: 50px; padding-bottom: 50px') Subscribe
        form.needs-validation(novalidate method="POST" )
            .form-row
                .col-md-4.mb-3
                    label(for='validationCustom01') Email
                    input#validationCustom01.form-control(type='email' name='email' placeholder='First name' required)
                    .valid-feedback Looks good!
                    .invalid-feedback Email is require !
                .col-md-4.mb-3
                    label(for='validationCustom02') Fullname
                    input#validationCustom02.form-control(type='text' name='name' placeholder='Họ và tên' required)
                    .valid-feedback Looks good!
                    .invalid-feedback Fullname is require !
                .col-md-4.mb-3
                    label(for='validationCustomUsername') Username
                    .input-group
                        .input-group-prepend
                        span#inputGroupPrepend.input-group-text @
                        input#validationCustomUsername.form-control(type='text' name='username' placeholder='Tên người dùng' aria-describedby='inputGroupPrepend')
            .form-row
                .col-md-6.mb-3
                    label(for='validationCustom03') Password
                    input#validationCustom03.form-control(type='password' name='password' placeholder='Password' required)
                    .invalid-feedback Please provide a valid password.
                .col-md-3.mb-3
                    label(for='validationCustom04') Phone
                    input#validationCustom04.form-control(type='phone' name='phone' placeholder='phone' required)
                    .invalid-feedback Phone is require !
                    .valid-feedback Looks good!
            button.btn.btn-primary(type='submit') Subscribe
    
    script.
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
