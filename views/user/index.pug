extends ../layouts/user_layout
block content
    #content
        h1(style='text-align: center;') Users List
        form#box-search(action="/user/search", method="GET")
            p Name
            input(type='text' placeholder='Enter name' name="q" value=value ? value.q : "")
            button Search
        #list-users
            .row
                p.name-column(style='font-weight: bold;') Name
                p.phone-column(style='font-weight: bold;') Phone
                p.action-column(style='font-weight: bold;') Action  
            each item in users
                .row             
                    p.name-user= item.name
                    p.phone-user= item.phone
                    a(href="/user/view_user"+item.id).action-user View
    nav.page(aria-label='Page navigation example')
        ul.pagination               
            li.page-item
                a.page-link(href='#') Previous
            each item in totalPage
                li.page-item
                    a.page-link(href='/user/index?page='+item)= item
            li.page-item
                a.page-link(href='#') Next
