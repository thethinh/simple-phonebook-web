extends ../layouts/user_layout
block content
    #header
        .area-avata
            if(oneuser.avata.length === 0)
                img.avata(src='/img/avata_default.png' title='Edit image')
            else
                img.avata(src=oneuser.avata[oneuser.avata.length-1] title='Edit image')
        .area-text
            .text-1
                p.username= oneuser.username
            .infor
                p.name= oneuser.name
                p.name &nbsp - &nbsp
                p.name= oneuser.phone
            a(style='text-decoration: none; font-size: 18px;' href=user.web target='blank')= oneuser.web
    .allAvata
        - var size = oneuser.avata.length;
        if (size === 1)
            img.avata_tiny(src=oneuser.avata[0])
        else if (size === 2)
            each val in [0,1]
                img.avata_tiny(src=oneuser.avata[val])
        else if (size === 3)
            each val in [0,1,2]
                img.avata_tiny(src=oneuser.avata[val])
        else if (size === 4)
            each val in [0,1,2,3]
                img.avata_tiny(src=oneuser.avata[val])
        else if (size === 5)
            each val in [0,1,2,3,4]
                img.avata_tiny(src=oneuser.avata[val])
        else if (size ===6)
            each val in [0,1,2,3,4,5]
                img.avata_tiny(src=oneuser.avata[val])
        else if (size > 6)
            each val in [size-2, size-3, size-4, size-5, size-6, size-7]
                img.avata_tiny(src=oneuser.avata[val]) 
    .area-status
        .text-status
            i.fas.fa-th
            | &nbspSTATUS
        each item in oneuser.status
            a.link-status(href='#')
                img.img-status(src='..'+ item)            